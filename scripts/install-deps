#!/bin/bash
# Installs required dependencies for building SecureDrop Worsktation packages.
# Assumes a Debian 9 machine, ideally a Qubes AppVM.

sudo apt-get update
sudo apt-get install  \
    build-essential \
    curl \
    devscripts \
    dh-make \
    dh-python \
    dh-virtualenv \
    libffi-dev \
    libssl-dev \
    python3-all \
    python3-setuptools
